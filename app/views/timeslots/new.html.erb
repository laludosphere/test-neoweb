<div class="container">
  <header>
    <a><%= link_to 'Logo', restaurants_path(), class:"header-brand"%></a>
    <ul>
      <li>
        <a><%= link_to 'List', restaurants_path(), class:"header-nav " %></a>
      </li>
      <li>
        <a><%= link_to 'Add Restaurant', new_restaurant_path(), class:"header-nav" %></a>
      </li>
    </ul>
  </header>
  <div class="content">
    <%= simple_form_for([@restaurant,@timeslot]) do |f| %>
      <h2 class="title-underline">Planning</h2>
        <div class="form-group">
            <%= f.input :day, collection:[ 'Monday','Tuesday','Wednesday','Thursday','Friday','Saturday','Sunday'],include_blank: false %>
        </div>
        <div class="form-group">
          <%= f.label :morning_start_hour  %>
          <%= f.time_select :morning_start_hour %>
        </div>
        <div class="form-group">
          <%= f.label :morning_end_hour  %>
          <%= f.time_select :morning_end_hour %>
        </div>
        <div class="form-group">
          <%= f.label :afternoon_start_hour  %>
          <%= f.time_select :afternoon_start_hour %>
        </div>
        <div class="form-group">
          <%= f.label :afternoon_end_hour %>
          <%= f.time_select :afternoon_end_hour %>
        </div>
        <div class='form-btn-container'>
          <%= f.submit"Sub Time for restaurant", class:"btn btn-primary " %>
        </div>
    <% end %>
  </div>
  <footer>Â© test-neoweb</footer>
</div>
