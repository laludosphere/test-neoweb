<div class="container">
  <header>
    <a><%= link_to 'Logo', restaurants_path(), class:"header-brand"%></a>
    <ul>
      <li>
        <a><%= link_to 'List', restaurants_path(), class:"header-nav active" %></a>
      </li>
      <li>
        <a><%= link_to 'Add Restaurant', new_restaurant_path(), class:"header-nav" %></a>
      </li>
    </ul>
  </header>
  <div class="content">
    <div class="restaurants-container">
      <% @restaurants.each do |restaurant| %>
        <div class="restaurant">
          <h2><%= restaurant.name %></h2>
          <p class="address-container"><%= restaurant.address %></p>
            <div class="restaurant-actions">
              <%= link_to "See", restaurant_path(restaurant), class: "btn btn-primary" %>
              <%= link_to "Delete", restaurant_path(restaurant),class:"btn btn-danger", method: :delete, data:{
                confirm: "Are you sure ? "
              } %>
            </div>
        </div>
      <% end %>
    </div>
  </div>
  <footer>Â© test-neoweb</footer>
</div>
