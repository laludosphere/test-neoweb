<div class="container">
  <header>
    <a><%= link_to 'Logo', restaurants_path(), class:"header-brand"%></a>
    <ul>
      <li>
        <a><%= link_to 'List', restaurants_path(), class:"header-nav active" %></a>
      </li>
      <li>
        <a><%= link_to 'Add Restaurant', new_restaurant_path(), class:"header-nav" %></a>
      </li>
    </ul>
  </header>
  <div class="content">
    <h1>Les restaurants</h1>
    <%= link_to 'Add new Restaurant', new_restaurant_path() %>
    <% @restaurants.each do |restaurant| %>
      <h2><%= restaurant.name %></h2>
      <p><%= restaurant.address %></p>
      <%= link_to "See", restaurant_path(restaurant) %>
      <%= link_to "Delete", restaurant_path(restaurant), method: :delete, data:{
        confirm: "Are you sure ? "
      } %>
    <% end %>
  </div>
