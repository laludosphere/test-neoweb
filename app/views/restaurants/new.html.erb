        <a><%= link_to 'Add Restaurant', new_restaurant_path(), class:"header-nav active" %></a>
      </li>
    </ul>
  </header>
  <div class="content">
    <%= form_for(@restaurant) do |f| %>
      <h2 class="title-underline">Add restaurant</h2>
        <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <%= f.label :address %>
          <%= f.text_field :address %>
        </div>
        <div class='form-btn-container'>
          <%= f.submit class:"btn btn-primary " %>
        </div>
    <% end %>
  </div>
